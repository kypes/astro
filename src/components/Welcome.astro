---
// We'll use client:load directive to hydrate the React components on the client
import { Lock, Mail, ArrowRight, User } from "lucide-react";
import LoginForm from "./LoginForm";
---

<div class="w-full max-w-5xl flex shadow-xl rounded-2xl overflow-hidden bg-base-200 login-container">
	<!-- Left side - Image and brand info -->
	<div class="hidden lg:block w-1/2 bg-base-100 relative overflow-hidden">
		<!-- Decorative elements -->
		<div class="absolute -top-20 -left-20 w-40 h-40 rounded-full bg-primary/20"></div>
		<div class="absolute bottom-10 right-10 w-20 h-20 rounded-full bg-primary/20"></div>
		<div class="absolute top-1/3 left-1/4 w-60 h-60 rounded-full bg-secondary/10"></div>
		
		<div class="absolute inset-0 flex flex-col justify-between p-12">
			<div>
				<h1 class="text-4xl font-bold text-primary">Astro App</h1>
				<p class="mt-2 text-base-content/70">Release Management System</p>
			</div>
			
			<div class="bg-base-200/70 backdrop-blur-sm p-8 rounded-xl border border-primary/10">
				<h2 class="text-2xl font-semibold mb-4">Welcome Back</h2>
				<p class="text-base-content/80 leading-relaxed">
					Log in to access your account and manage your releases. Our platform provides streamlined 
					tools for release submission and administration.
				</p>
				<div class="mt-6 flex items-center gap-3">
					<div class="avatar-group -space-x-2">
						<div class="avatar">
							<div class="w-8 h-8">
								<img src="https://ui-avatars.com/api/?name=J+D&background=f59e0b&color=fff" />
							</div>
						</div>
						<div class="avatar">
							<div class="w-8 h-8">
								<img src="https://ui-avatars.com/api/?name=S+T&background=f59e0b&color=fff" />
							</div>
						</div>
						<div class="avatar">
							<div class="w-8 h-8">
								<img src="https://ui-avatars.com/api/?name=A+B&background=f59e0b&color=fff" />
							</div>
						</div>
						<div class="avatar placeholder">
							<div class="w-8 h-8 bg-primary text-white">
								<span>+5</span>
							</div>
						</div>
					</div>
					<p class="text-sm text-base-content/70">Join our active community</p>
				</div>
			</div>
		</div>
	</div>
	
	<!-- Right side - Login form -->
	<div class="w-full lg:w-1/2 p-8 md:p-12 lg:p-16">
		<LoginForm client:load />
	</div>
</div>

<script>
	// For demonstration purposes - handle form submission
	document.addEventListener('DOMContentLoaded', () => {
		const form = document.querySelector('form');
		form?.addEventListener('submit', (e) => {
			e.preventDefault();
			// In a real app, you would handle authentication here
			console.log('Form submitted');
		});
	});
</script>
