---
// We'll use client:load directive to hydrate the React components on the client
import { Lock, Mail, ArrowRight, } from "lucide-react";
---

<div class="w-full max-w-5xl flex shadow-xl rounded-2xl overflow-hidden bg-base-200 login-container">
	<!-- Left side - Image and brand info -->
	<div class="hidden lg:block w-1/2 bg-base-100 relative overflow-hidden">
		<!-- Decorative elements -->
		<div class="absolute -top-20 -left-20 w-40 h-40 rounded-full bg-primary/20"></div>
		<div class="absolute bottom-10 right-10 w-20 h-20 rounded-full bg-primary/20"></div>
		<div class="absolute top-1/3 left-1/4 w-60 h-60 rounded-full bg-secondary/10"></div>
		
		<div class="absolute inset-0 flex flex-col justify-between p-12">
			<div>
				<h1 class="text-4xl font-bold text-primary">Kingdom Leaks</h1>
				<p class="mt-2 text-base-content/70">Release Discord Bot</p>
			</div>
			
			<div class="bg-base-200/70 backdrop-blur-sm p-8 rounded-xl border border-primary/10">
				<h2 class="text-2xl font-semibold mb-4">Get Posting! ðŸ“¢</h2>
				<p class="text-base-content/80 leading-relaxed">
					Log in to access your account and manage your releases. Our tool for release submission and administration.
				</p>
			</div>
		</div>
	</div>
	
	<!-- Right side - Login form -->
	<div class="w-full lg:w-1/2 p-8 md:p-12 lg:p-16">
		<div class="mb-8 text-center lg:text-left">
			<h2 class="text-3xl font-bold">Sign In</h2>
			<p class="mt-2 text-base-content/70">Enter your credentials to access your account</p>
		</div>
		
		<form class="space-y-6">
			<!-- Email field -->
			<div class="form-control">
				<label class="label">
					<span class="label-text font-medium">Email</span>
				</label>
				<div class="relative">
					<span class="absolute left-3 top-1/2 -translate-y-1/2 text-base-content/50">
						<Mail size={18} />
					</span>
					<input 
						type="email" 
						class="input input-bordered w-full pl-3" 
						placeholder="name@example.com"
						required
					/>
				</div>
			</div>
			
			<!-- Password field -->
			<div class="form-control">
				<label class="label">
					<span class="label-text font-medium">Password</span>
					<a href="#" class="label-text-alt link link-hover text-primary">Forgot password?</a>
				</label>
				<div class="relative">
					<span class="absolute left-3 top-1/2 -translate-y-1/2 text-base-content/50">
						<Lock size={18} />
					</span>
					<input 
						type="password" 
						class="input input-bordered w-full pl-3" 
						placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"
						required
					/>
				</div>
			</div>
			
			<!-- Remember me checkbox -->
			<div class="flex items-center">
				<input type="checkbox" class="checkbox checkbox-primary checkbox-sm mr-2" id="remember" />
				<label for="remember" class="text-sm cursor-pointer">Remember me</label>
			</div>
			
			<!-- Submit button -->
			<button type="submit" class="btn btn-primary w-full">
				Sign In
				<ArrowRight size={18} />
			</button>
		</form>
	</div>
</div>

<script>
	// For demonstration purposes - handle form submission
	document.addEventListener('DOMContentLoaded', () => {
		const form = document.querySelector('form');
		form?.addEventListener('submit', (e) => {
			e.preventDefault();
			// In a real app, you would handle authentication here
			console.log('Form submitted');
		});
	});
</script>
