---
import Layout from '../layouts/Layout.astro';
import ProtectedRoute from '../components/ProtectedRoute';
---

<Layout title="Dashboard | Release Management System">
	<ProtectedRoute client:load>
		<div class="container mx-auto p-6">
			<h1 class="text-3xl font-bold mb-6">Dashboard</h1>
			
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
				<!-- Overview Card -->
				<div class="card bg-base-100 shadow-xl">
					<div class="card-body">
						<h2 class="card-title">Overview</h2>
						<p>Welcome to your dashboard! This is a protected page that only authenticated users can access.</p>
					</div>
				</div>
				
				<!-- Statistics Card -->
				<div class="card bg-base-100 shadow-xl">
					<div class="card-body">
						<h2 class="card-title">Statistics</h2>
						<div class="stats shadow">
							<div class="stat">
								<div class="stat-figure text-primary">
									<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-8 h-8 stroke-current"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path></svg>
								</div>
								<div class="stat-title">Total Releases</div>
								<div class="stat-value text-primary">25</div>
							</div>
						</div>
					</div>
				</div>
				
				<!-- Actions Card -->
				<div class="card bg-base-100 shadow-xl">
					<div class="card-body">
						<h2 class="card-title">Quick Actions</h2>
						<div class="flex flex-col gap-2">
							<button class="btn btn-primary">New Release</button>
							<button class="btn btn-outline">View Reports</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</ProtectedRoute>
</Layout> 